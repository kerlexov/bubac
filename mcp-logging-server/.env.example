# Domain configuration
API_DOMAIN=api.mcp-logging.example.com
MCP_DOMAIN=mcp.mcp-logging.example.com
ACME_EMAIL=admin@example.com

# Database configuration (for PostgreSQL setup)
POSTGRES_DB=mcp_logs
POSTGRES_USER=logger
POSTGRES_PASSWORD=your_secure_password_here

# Security settings
API_KEY_REQUIRED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# Data protection
MASK_SENSITIVE_FIELDS=true
SENSITIVE_FIELDS=password,token,secret,key,authorization,credit_card,ssn

# TLS settings (when not using Traefik)
TLS_ENABLED=false
TLS_CERT_PATH=/app/certs/server.crt
TLS_KEY_PATH=/app/certs/server.key

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json