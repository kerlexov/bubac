# Coolify Environment Configuration for MCP Logging Server
# Copy this file to .env and customize the values for your deployment

# Domain configuration
API_DOMAIN=api.mcp-logging.yourdomain.com
MCP_DOMAIN=mcp.mcp-logging.yourdomain.com

# Port configuration (usually not needed in Coolify as it handles routing)
INGESTION_PORT=9080
MCP_PORT=8081

# Authentication settings
API_KEY_REQUIRED=true

# Rate limiting configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# Data protection settings
MASK_SENSITIVE_FIELDS=true
SENSITIVE_FIELDS=password,token,secret,key,authorization,credit_card,ssn,api_key

# Logging configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database configuration (for PostgreSQL option)
# POSTGRES_DB=mcp_logs
# POSTGRES_USER=logger
# POSTGRES_PASSWORD=your_secure_password_here

# Security settings
# These are typically handled by Coolify's reverse proxy
TLS_ENABLED=false
HTTPS_REDIRECT=false

# Application-specific settings
BUFFER_SIZE=10000
BUFFER_FLUSH_TIMEOUT=5s
BUFFER_MAX_BATCH_SIZE=100

# Retention settings
RETENTION_DEFAULT_DAYS=30
RETENTION_DEBUG_DAYS=7
RETENTION_INFO_DAYS=30
RETENTION_WARN_DAYS=90
RETENTION_ERROR_DAYS=365
RETENTION_FATAL_DAYS=365

# Monitoring and metrics
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Audit settings
AUDIT_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90